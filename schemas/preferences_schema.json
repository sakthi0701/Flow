{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "workDayStart": {
      "type": "string",
      "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
    },
    "workDayEnd": {
      "type": "string",
      "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
    },
    "breakDuration": {
      "type": "integer",
      "minimum": 5,
      "maximum": 60
    },
    "minWorkBlock": {
      "type": "integer",
      "minimum": 15,
      "maximum": 120
    },
    "aiPersonality": {
      "type": "string",
      "enum": ["friendly_mentor", "professional_planner", "minimal_coach"]
    },
    "breakRatio": {
      "type": "object",
      "properties": {
        "workMinutes": {
          "type": "integer",
          "minimum": 25,
          "maximum": 120
        },
        "breakMinutes": {
          "type": "integer",
          "minimum": 5,
          "maximum": 30
        }
      },
      "required": ["workMinutes", "breakMinutes"]
    },
    "energyLevels": {
      "type": "object",
      "properties": {
        "morning": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "afternoon": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "evening": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "night": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        }
      }
    },
    "categoryPreferences": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_]+$": {
          "type": "object",
          "properties": {
            "preferredTime": {
              "type": "string",
              "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
            },
            "preferredDays": {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0,
                "maximum": 6
              }
            }
          }
        }
      }
    }
  },
  "required": ["workDayStart", "workDayEnd", "breakDuration", "minWorkBlock"]
}